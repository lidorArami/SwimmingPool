<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="שם משתמש*">
    </EditText>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="סיסמא*">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etID"
        android:textSize="30sp"
        android:hint="תעודת זהות" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etAge"
        android:textSize="30sp"
        android:hint="גיל" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etAccNum"
        android:textSize="30sp"
        android:hint="מספר חשבון" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etNumEnt"
        android:textSize="30sp"
        android:hint="מספר הכניסות" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#c1112e"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="הירשם" />

    <TextView
        android:text="-שדות לא מסומנים הם לא חובה-"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

</LinearLayout>